<div class="page-container">

  <div class="wrapper">
    <div class="row">
      <div class="content-main">

        <%= form_for @campsite, html: {class: 'form-horizontal'} do |f| %>

          <div class="form-group">
            <%= f.label :name, {class: "col-sm-1 control-label", autofocus: true} %>
            <div class="col-sm-2">
              <%= f.text_field :name, {class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :city, {class: "col-sm-1 control-label"} %>
            <div class="col-sm-2">
              <%= f.text_field :city, {class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :state, {class: "col-sm-1 control-label"} %>
            <div class="col-sm-2">
              <%= f.text_field :state, {class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10">
              <%= f.submit 'Add Campsite', :class => "btn btn-primary" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>

</div>