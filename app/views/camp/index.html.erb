<div class="page-container">
  <% if flash %>
    <% flash.each do |key, value| %>
      <%= value %>
    <% end %>
  <% end %>
  <div class="index-container">
    Welcome to myCamp. Click on the map to add a campsite.
  </div>


  <div id="panel">
    <input onclick="clearMarkers();" type=button value="Hide Campsites">
    <input onclick="showMarkers();" type=button value="Show All Campsites">
  </div>
</div>

<div id="map-canvas"></div>
<script type="text/javascript">
  initialize();
</script>